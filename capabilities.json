{
    "dataRoles": [
        {
            "displayName": "Sources",
            "name": "source_node",
            "kind": "Grouping"
        },
        {
            "displayName": "Targets",
            "name": "target_node",
            "kind": "Grouping"
        },
        {
            "displayName": "Targets",
            "name": "dummy",
            "kind": "Measure"
        }

    ],
    "dataViewMappings": [
        {
            "conditions": 
            [
                {
                    "source_node":  {"min":1, "max": 1},
                    "target_node":  {"min":1, "max": 1},
                    "dummy":        {"min":1, "max": 1}
                }
            ],
            "categorical": {
                "categories": { "for": { "in": "source_node"}},
                "values": { 
                    "group": {
                        "by": "target_node",
                        "select": [
                            { "bind": { "to": "dummy"}}  
                        ]
                    }
                }
            }
        }
    ],
    "objects": {
        "source" : {
            "properties": {
                "color" : {
                    "type": {
                        "fill": {
                            "solid": {
                                "color" : true
                            }
                        }
                    }
                },
                "radius" : {
                    "type": {
                        "numeric": true
                    }
                }
            }
        },
        "link" : {
            "properties": {
                "link_distance" : {
                    "type": {
                        "numeric": true
                    }
                },
                "link_gravity" : {
                    "type": {
                        "numeric": true
                    }
                },
                "link_width" : {
                    "type": {
                        "numeric": true
                    }
                },
                "link_color" : {
                    "type": {
                        "fill" : {
                            "solid": {
                                "color" : true
                            }
                        } 
                    }
                },
                "link_opacity" : {
                    "type" : {
                        "numeric": true
                    }
                }
            }
        }
    },
    "privileges": []
}