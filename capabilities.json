{
    "dataRoles": [
        {
            "displayName": "Sources (Required)",
            "name": "source_node",
            "kind": "Grouping"
        },
        {
            "displayName": "Targets (Required)",
            "name": "target_node",
            "kind": "Grouping"
        },
        {
            "displayName": "Distance (Required)",
            "name": "distance",
            "kind": "Measure",
            "requiredTypes": [
                {
                    "numeric": true
                },
                {
                    "integer": true
                }
            ]

        }
    ],
    "dataViewMappings": [
        {
            "conditions": [
                { "source_node": { "min": 1, "max": 1}},
                { "target_node": { "min": 1, "max": 1}},
                { "distance":    { "min": 1, "max": 1}},
                { "source_fill": { "min": 0, "max": 1}}
            ],
            "categorical": {
                "categories": { "for": { "in": "source_node"}},
                "values": {
                    "group": {
                        "by": "target_node",
                        "select": [
                            { "bind": { "to": "distance"}}
                        ]
                    }
                }
            }
        }
    ],
    "objects": {
        "node" : {
            "properties": {
                "node_default_fill": {
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }

                },
                "node_default_stroke":{
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "node_default_radius": {
                    "type": {
                        "numeric": true
                    }
                }
            }
        },
        "link": {
            "properties": {
                "link_default_stroke":{
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "link_default_opacity": {
                    "type": {
                        "numeric": true
                    }
                },
                "link_default_width": {
                    "type": {
                        "numeric": true
                    }
                },
                "link_default_gravity": {
                    "type": {
                        "numeric": true
                    }
                }

            }
        },
        "advanced": {
            "properties": {
                "advanced_seperator": {
                    "type": {
                        "text": true
                    }
                }
            } 
        }
    },
    "supportsOnObjectFormatting": true,
    "privileges": []
}