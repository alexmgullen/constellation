{
    "dataRoles": [
        {
            "displayName": "Sources (Required)",
            "name": "source_node",
            "kind": "Grouping"
        },
        {
            "displayName": "Targets (Required)",
            "name": "target_node",
            "kind": "Grouping"
        },
        {
            "displayName": "Distance (Required)",
            "name": "distance",
            "kind": "Measure"
        }

    ],
    "dataViewMappings": [
        {
            "conditions": [
                { "source_node": { "min": 1, "max": 1}},
                { "target_node": { "min": 1, "max": 1}},
                { "distance": { "min": 0, "max": 1}}
            ],
            
            "categorical": {
                "categories": { "for": { "in": "source_node"}},
                "values": { 
                    "group": {
                        "by": "target_node",
                        "select": [
                            { "bind": { "to": "distance"}}  
                        ]
                    }
                }
            }
        }
    ],
    "objects": {
        "source" : {
            "properties": {
                "color" : {
                    "type": {
                        "fill": {
                            "solid": {
                                "color" : true
                            }
                        }
                    }
                },
                "radius" : {
                    "type": {
                        "numeric": true
                    }
                }
            }
        },
        "link" : {
            "properties": {
                "link_distance" : {
                    "type": {
                        "numeric": true
                    }
                },
                "link_gravity" : {
                    "type": {
                        "numeric": true
                    }
                },
                "link_width" : {
                    "type": {
                        "numeric": true
                    }
                },
                "link_color" : {
                    "type": {
                        "fill" : {
                            "solid": {
                                "color" : true
                            }
                        } 
                    }
                },
                "link_opacity" : {
                    "type" : {
                        "numeric": true
                    }
                }
            }
        },
        "advanced": {
